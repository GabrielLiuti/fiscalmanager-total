generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Empresa {
  id        Int           @id @default(autoincrement())
  nome      String
  cnpj      String        @unique
  endereco  String?
  produtos  Produto[]     @relation("EmpresaProdutos")
  notas     NotaFiscal[]
}

model Produto {
  id         Int           @id @default(autoincrement())
  nome       String
  preco      Float
  ncm        String?       // campo opcional
  empresaId  Int?
  empresa    Empresa?      @relation("EmpresaProdutos", fields: [empresaId], references: [id])
  itensNF    ItemNF[]
}

model NotaFiscal {
  id         Int           @id @default(autoincrement())
  numero     String
  data       DateTime      @default(now())
  empresaId  Int
  empresa    Empresa       @relation(fields: [empresaId], references: [id])
  itens      ItemNF[]
}

model ItemNF {
  id         Int           @id @default(autoincrement())
  quantidade Int
  valor      Float
  notaId     Int
  produtoId  Int?
  nfe        NotaFiscal    @relation(fields: [notaId], references: [id])
  produto    Produto?      @relation(fields: [produtoId], references: [id])
}

model Usuario {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  senhaHash  String
  role       String   @default("user")
  criadoEm   DateTime @default(now())
}

