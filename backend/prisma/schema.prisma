generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         String   @id @default(cuid())
  email      String   @unique
  senhaHash  String
  role       String   @default("admin")
  criadoEm   DateTime @default(now())
}

model Empresa {
  id        String    @id @default(cuid())
  nome      String
  cnpj      String    @unique
  endereco  String?
  produtos  Produto[]
  notas     NotaFiscal[]
  criadoEm  DateTime  @default(now())
}

model Produto {
  id        Int      @id @default(autoincrement())
  nome      String
  preco     Float
  ncm       String?  // ‚Üê adicione esta linha
  criadoEm  DateTime @default(now())
  atualizadoEm DateTime @updatedAt
}

model NotaFiscal {
  id         String    @id @default(cuid())
  numero     String
  total      Float
  empresaId  String
  empresa    Empresa   @relation(fields: [empresaId], references: [id])
  itens      ItemNF[]
  criadoEm   DateTime  @default(now())
}

model ItemNF {
  id         String      @id @default(cuid())
  notaId     String
  produtoId  String?
  quantidade Int
  nfe        NotaFiscal  @relation(fields: [notaId], references: [id])
  produto    Produto?    @relation(fields: [produtoId], references: [id])
}
